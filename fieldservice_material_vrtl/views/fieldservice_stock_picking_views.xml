<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fieldservice_order_line_form_inherit_material" model="ir.ui.view">
        <field name="name">fieldservice.order.line.form.inherit.material</field>
        <field name="model">fieldservice.order.line</field>
        <field name="inherit_id" ref="fieldservice_vrtl.view_fieldservice_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet" position="inside">
                <group>
                    <field name="used_material_ids">
                       <list>
                            <field name="product_id" optional="show"/>
                            <field name="product_uom_qty" optional="hide"/>
                       </list>
                    </field>
                    <field name="requested_material_ids">
                       <list>
                            <field name="product_id" optional="show"/>
                            <field name="product_uom_qty" optional="hide"/>
                       </list>
                    </field>                   
                </group>
            </xpath>
        </field>
    </record>
        <record id="view_fieldservice_order_form_inherit_material" model="ir.ui.view">
        <field name="name">fieldservice.order.form.inherit.material</field>
        <field name="model">fieldservice.order</field>
        <field name="inherit_id" ref="fieldservice_vrtl.view_fieldservice_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//field[@name='order_line_ids']/list" position="inside">
                <field name="used_material_ids" widget="many2many_tags" optional ="hide">
                </field>
                <field name="requested_material_ids" widget="many2many_tags" optional ="hide">                  

                </field>
            </xpath>
        </field>
    </record>

</odoo>
