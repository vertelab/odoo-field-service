<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="view_fieldservice_order_form" model="ir.ui.view">
    <field name="name">fieldservice.order.form</field>
    <field name="model">fieldservice.order</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
            </header>
            <sheet class="oe_form_sheet_width">
                <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group name="group_top">
                    <group>
                        <field name="priority" widget="priority"/>
                        <field name="planned_start_datetime"/>
                        <field name="deadline_datetime"/>
                        <field name="planned_duration" widget="float_time"/>
                    </group>
                    <group>
                        <field name="requested_employee_ids" widget="many2many_tags"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="duration" widget="float_time"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description"/>
                    </page>
                    <page string="Instructions">
                        <group>
                            <field name="work_instructions"/>
                            <field name="location_instructions"/>
                        </group>
                    </page>
                    <page string="Order Lines">
                        <field name="order_line_ids">
                            <list editable="bottom">
                                <field name="stage_id"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <!--<field name="image_ids" widget="many2many_tags"/>-->
                                <button name="open_form_view" string="Open" type="object" class="btn-secondary"/>
                            </list>
                        </field>
                    </page>
                  </notebook>
                </sheet>
               <chatter/>
        </form>
    </field>
</record>

        <record id="view_fieldservice_order_tree" model="ir.ui.view">
            <field name="name">fieldservice.order.tree</field>
            <field name="model">fieldservice.order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="stage_id"/>
                    <field name="priority" widget="priority"/>
                    <field name="planned_start_datetime"/>
                    <field name="deadline_datetime"/>
                    <field name="duration" widget="float_time" sum="Total Duration"/>
                </list>
            </field>
        </record>

        <record id="view_fieldservice_order_kanban" model="ir.ui.view">
            <field name="name">fieldservice.order.kanban</field>
            <field name="model">fieldservice.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column" on_create="quick_create">
                    <field name="name"/>
                    <field name="stage_id"/>
                    <field name="priority"/>
                    <field name="planned_start_datetime"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="planned_start_datetime"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_fieldservice_order_search" model="ir.ui.view">
            <field name="name">fieldservice.order.search</field>
            <field name="model">fieldservice.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="stage_id"/>
                    <field name="requested_employee_ids"/>
                    <filter string="My Orders" name="my_orders" domain="[('requested_employee_ids', 'in', uid)]"/>
                    <filter string="Late Orders" name="late_orders" domain="[('deadline_datetime', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Stage" name="group_by_stage" context="{'group_by': 'stage_id'}"/>
                        <filter string="Priority" name="group_by_priority" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_fieldservice_order" model="ir.actions.act_window">
            <field name="name">Field Service Orders</field>
            <field name="res_model">fieldservice.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new field service order
                </p>
            </field>
        </record>

        <menuitem id="menu_fieldservice_root" name="Field Service" sequence="40"/>
        <menuitem id="menu_fieldservice_order" name="Orders" parent="menu_fieldservice_root" action="action_fieldservice_order" sequence="10"/>
    </data>
</odoo>
